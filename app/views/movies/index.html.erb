<h1>Filmes</h1>

<% if flash[:notice] %>
  <div style="margin: 10px 0px">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= 'Nenhum filme cadastrado' if @movies.empty? %>

<% @movies.each do |movie| %>
  <strong>Título: </strong>
  <%= link_to movie.title, movie %><br>

  <strong>Ano: </strong>
  <%= movie.year %><br>

  <strong>Status: </strong>
  <%= movie.released? ? 'Lançado' : 'Não lançado' %>
  
  <hr>
<% end %>

<br>

<%= link_to 'Novo Filme', new_movie_path %>
