<h1>Cadastro de Filme</h1>

<%= form_with model: movie do | f | %>

  <%= f.label 'Título' %>
  <%= f.text_field :title %>

  <%= f.label 'Ano' %>
  <%= f.number_field :year %>

  <%= f.label 'Sinopse' %>
  <%= f.text_area :synopsis %>

  <%= f.label 'País' %>
  <%= f.text_field :country %>

  <%= f.label 'Duração' %>
  <%= f.number_field :duration %>

  <%= f.label 'Diretor' %>
  <%= f.collection_select :director_id, directors, :id, :name %>

  <%= f.label 'Gênero' %>
  <%= f.collection_select :movie_genre_id, movie_genres, :id, :name %>

  <%= f.submit 'Salvar' %>
<% end %>